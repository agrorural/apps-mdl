        .navbar-fixed.nav-extended
          nav(class="navbar white")
            .nav-wrapper
              a(href="#", class="brand-logo grey-text text-darken-4") #{title}
              ul(id="nav-mobile", class="right")
                li.hide-on-med-and-down
                  a(href="#") Enlace
                li.hide-on-med-and-down
                  a(href="#")
                    i.fas.fa-bell
                li
                  a(href="#")
                    i.fas.fa-cog
              a(href="#!", data-target="sidenav-left", class="sidenav-trigger left show-on-small")
                i.fas.fa-bars
          nav(class="nav-content")
            .nav-wrapper
              ul.tabs
                li.tab
                  a(href="#test1") MÃ©trica
                li.tab
                  a(href="#test2") Empleados
                li.tab
                  a(href="#test3") Calendario
      else
        .navbar-fixed
          nav(class="navbar white")
            .nav-wrapper
              a(href="#", class="brand-logo grey-text text-darken-4") #{title}
              ul(id="nav-mobile", class="right")
                li.hide-on-med-and-down
                  a(href="#") Enlace
                li.hide-on-med-and-down
                  a(href="#")
                    i.fas.fa-bell
                li
                  a(href="#")
                    i.fas.fa-cog
              a(href="#!", data-target="sidenav-left", class="sidenav-trigger left")
                i.fas.fa-bars
        
      ul#sidenav-left.sidenav.sidenav-fixed(style="transform: translateX(0%);")
          li
            a.logo-container(href="/admin.html")
              | SISGEP
          mixin mainmenu(activeItem, activeItemChild)
            -var menuItems = [{name: 'Inicio', href: './admin.html', isActive: false, child: null}, {name: 'Recursos Naturales', href :null, isActive: false, child: [{name: 'Listado Formularios', href: './listado-formularios.html', isActive: false, child: null, icon: 'fab fa-wpforms'}]}]

            each val, index in menuItems
              if val.child == null
                if menuItems[index].name === activeItem
                  li.bold.active
                    a.waves-effect.waves-primary(href=val.href, title=val.name)
                        span= val.name
                else
                  li.bold.waves-effect
                    a.waves-effect.waves-primary(href=val.href, title=val.name)
                      span= val.name
              else
                li.no-padding
                  ul.collapsible.collapsible-accordion
                    if menuItems[index].name === activeItem
                      li.bold.active
                        a.collapsible-header.waves-effect.waves-primary(tabindex="0") 
                          span= val.name
                        .collapsible-body
                          ul
                            each value, index in val.child
                              if value.name === activeItemChild
                                li.active
                                  a(href=value.href, title=value.name)
                                    i(class=value.icon)
                                    span= value.name
                              else
                                li
                                  a(href=value.href, title=value.name)
                                    i(class=value.icon)
                                    span= value.name

                    else
                      li.bold.waves-effect
                        a.collapsible-header.waves-effect.waves-primary(tabindex="0") 
                          span= val.name
                        .collapsible-body
                          ul
                            each value, index in val.child
                              if value.name === activeItemChild
                                li.active
                              else
                                li
                                  a(href=value.href, title=value.name)
                                    i(class=value.icon)
                                    span= value.name

          block mainmenu
            +mainmenu('Inicio','')
    
  block main
    .container

  block footer
    include _footer.pug

  block scripts
    script(src='dist/scripts/vendor.js')